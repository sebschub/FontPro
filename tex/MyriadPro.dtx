%    \end{macrocode}
% Check if any substitutions are specified.
%    \begin{macrocode}
  \edef\@tempa{%
    \My@UseConfig{sub:series}{#4}%
    \My@UseConfigOrDefault{sub:encoding/shape}{#2/#5}{%
