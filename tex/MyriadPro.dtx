\newcommand*\My@DeclareFontShapes[5]{%
  \@for\My@series:=#3\do{%
    \@for\My@shape:=#4\do{%
      \@for\My@variant:=#5\do{%
        \My@DeclareFontShape{#1}{#2}{\My@series}{\My@shape}{\My@variant}%
      }%
    }%
  }%
}
\otf@makeglobal{My@DeclareFontShapes}
