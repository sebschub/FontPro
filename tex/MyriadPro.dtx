\newcommand*\My@DeclareFontFamily[6][]{%
  \@for\My@variant:=#2\do{%
    \DeclareFontFamily {#3}{#4-\My@variant}{#1}%
  }%
  \My@DeclareFontShapes{#3}{#4}
    {#5} {#6} {#2}%
}
\otf@makeglobal{My@DeclareFontFamily}
\otf@makeglobal{\string\My@DeclareFontFamily}
